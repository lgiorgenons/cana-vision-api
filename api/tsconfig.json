{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@integrations/*": ["integrations/*"],
      "@workers/*": ["workers/*"],
      "@dtos/*": ["dtos/*"],
      "@domain/*": ["domain/*"],
      "@common/*": ["common/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
